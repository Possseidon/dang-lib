root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,h}]
indent_size = 4
indent_style = space

[{CMakeLists.txt,*.cmake}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.natvis]
indent_size = 2
indent_style = space

[.cmake-format.py]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space
