#---------------------------------------------------------------------------
# Project related configuration options
#---------------------------------------------------------------------------

PROJECT_NAME           = "@CMAKE_PROJECT_NAME@"
PROJECT_NUMBER         = @PROJECT_VERSION_MAJOR@.@PROJECT_VERSION_MINOR@.@PROJECT_VERSION_PATCH@

#---------------------------------------------------------------------------
# Build related configuration options
#---------------------------------------------------------------------------

EXTRACT_ALL            = YES
EXTRACT_PRIV_VIRTUAL   = YES

#---------------------------------------------------------------------------
# Configuration options related to the input files
#---------------------------------------------------------------------------

INPUT                  = dang-gl dang-glfw dang-lua dang-math dang-utils
FILE_PATTERNS          = *.cpp *.h
RECURSIVE              = YES

#---------------------------------------------------------------------------
# Configuration options related to the HTML output
#---------------------------------------------------------------------------

HTML_OUTPUT            = "@CMAKE_CURRENT_BINARY_DIR@/html"
HTML_COLORSTYLE_HUE    = 280
HTML_COLORSTYLE_SAT    = 80
HTML_COLORSTYLE_GAMMA  = 180
HTML_DYNAMIC_SECTIONS  = YES
GENERATE_TREEVIEW      = YES

#---------------------------------------------------------------------------
# Configuration options related to the LaTeX output
#---------------------------------------------------------------------------

GENERATE_LATEX         = NO
